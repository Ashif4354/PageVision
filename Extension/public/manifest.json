{
    "manifest_version": 3,
    "name": "PageVision",
    "version": "0.1.0",
    "description": "A web extension which can be used to query the DOM of a webpage.",
    "permissions": [
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}